<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<welcome-file-list>
		<welcome-file>/welcome.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>UserFilter</filter-name>
		<filter-class>com.hp.hpsc.logview.filter.UserFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UserFilter</filter-name>
		<url-pattern>/HomeServlet</url-pattern>
		<url-pattern>/DirectoryServlet/*</url-pattern>
		<url-pattern>/DownloadServlet/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>DirectoryServlet</servlet-name>
		<servlet-class>com.hp.hpsc.logview.servlet.DirectoryServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DownloadServlet</servlet-name>
		<servlet-class>com.hp.hpsc.logview.servlet.DownloadServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HomeServlet</servlet-name>
		<servlet-class>com.hp.hpsc.logview.servlet.HomeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.hp.hpsc.logview.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.hp.hpsc.logview.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Download4ClientServlet</servlet-name>
		<servlet-class>com.hp.hpsc.logview.servlet.Download4ClientServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Directory4ClientServlet</servlet-name>
		<servlet-class>com.hp.hpsc.logview.servlet.Directory4ClientServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ErrorHandler</servlet-name>
		<servlet-class>com.hp.hpsc.logview.servlet.ErrorHandlerServlet</servlet-class>
	</servlet>
	<!-- servlet mappings -->
	<servlet-mapping>
		<servlet-name>ErrorHandler</servlet-name>
		<url-pattern>/ErrorHandler</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Directory4ClientServlet</servlet-name>
		<url-pattern>/Directory4ClientServlet/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Download4ClientServlet</servlet-name>
		<url-pattern>/Download4ClientServlet/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/LogoutServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DirectoryServlet</servlet-name>
		<url-pattern>/DirectoryServlet/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownloadServlet</servlet-name>
		<url-pattern>/DownloadServlet/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HomeServlet</servlet-name>
		<url-pattern>/HomeServlet</url-pattern>
	</servlet-mapping>

	<!-- exception-type related error pages -->
	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/ErrorHandler</location>
	</error-page>
	<error-page>
		<exception-type>java.io.IOException</exception-type>
		<location>/ErrorHandler</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/ErrorHandler</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/ErrorHandler</location>
	</error-page>
	
</web-app>